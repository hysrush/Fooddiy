<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    <http>
        <intercept-url pattern="/**" access="hasRole('loginVO')" />
       
        <session-management invalid-session-url="/sign/login.do">
        	<concurrency-control max-sessions="1" expired-url="/sign/login.do"/>
    	</session-management>
    </http>
    
    <!--  provider  -->
    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="id" password="pw" authorities="loginVO" />
            </user-service>
        </authentication-provider>
    </authentication-manager>
    
</beans:beans>